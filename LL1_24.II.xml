		<body xml:lang="fr">
			<!--Body in lingua francese-->
			<pb facs="#LL1.24.II_folio_1r" n="1" xml:id="LL1.24.II_fol_1r" />
			<!-- recto-->
			<div type="letter-body">
				<ab n="ab_03" type="parag">
					<s n="s_06" type="sentence">
						<ptr target="#LL1.24.II_note1" />
						<lb facs="#LL1.24.II_line_1r_01" n="1" xml:id="LL1.24.II_lb_1r_01" />
						en assurant
						<persName ref="TEI-ListPerson.xml#LaportePierreFrancois" role="impresario">
							<choice>
								<abbr>M<am>:</am><hi rend="sup">r</hi></abbr>
								<expan>M<ex>onsieu</ex>r</expan>
							</choice>
							Laporte,
						</persName>
						qui vous
						<lb facs="#LL1.24.II_line_1r_02" n="2" xml:id="LL1.24.II_lb_1r_02" />
						lui rendra à sa premiere demande,
						<lb facs="#LL1.24.II_line_1r_03" n="3" xml:id="LL1.24.II_lb_1r_03" />
						<unclear reason="damage">
						<gap extent="several-characters" reason="lost" agent="hole"/><!--Parola rovinata non leggibile-->
						</unclear>qui dans ce moment est
						<lb facs="#LL1.24.II_line_1r_04" n="4" xml:id="LL1.24.II_lb_1r_04" />
						necessaire pour vous comme <w resp="#DS">pour</w>
						<lb facs="#LL1.24.II_line_1r_05" n="5" xml:id="LL1.24.II_lb_1r_05" />
						le theatre,
						<del rend="strikethrough">plaisir qui</del> je suis
						<lb facs="#LL1.24.II_line_1r_06" n="6" xml:id="LL1.24.II_lb_1r_06" />
						sûre qui ne vous
						<choice>
							<orig>rifusera </orig>
							<reg>refusera</reg>
						</choice>
						<!--Parte di testo danneggiata per sfregamento-->
						de
						<lb facs="#LL1.24.II_line_1r_07" n="7" xml:id="LL1.24.II_lb_1r_07" />
						vous faire ce plaisir —
					</s>
				</ab>
			</div>
			<div n="c_01" type="closer">
				<!--Chiusura della lettera-->
				<ab n="ab_04">
					<s n="s_07" type="sentence">
						<lb facs="#LL1.24.II_line_1r_08" n="8" xml:id="LL1.24.II_lb_1r_08" />
						Milles amitiés <supplied cert="high" reason="lost">de</supplied>
					</s>
				</ab>
				<salute n="ab_05">
					<s n="s_08" type="sentence">
						<lb facs="#LL1.24.II_line_1r_09" n="9" xml:id="LL1.24.II_lb_1r_09" />
						<hi rend="align(right)">
							<rs ref="TEI-ListPerson.xml#BelliniVincenzoSalvatoreCarmeloFrancesco" role="composer" type="person">votre</rs>
						</hi>
					</s>
				</salute>

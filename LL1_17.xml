		<body xml:lang="it">
			<pb facs="#LL1.17_folio_1r" n="1" xml:id="LL1.17_fol_1r" />
			<!--Fronte -->
			<div type="letter-body">
				<salute n="ab_01" rend="first_line_indented">
					<s n="s_01" type="sentence">
						<lb facs="#LL1.17_line_1r_01" n="1" xml:id="LL1.17_lb_1r_01" />
						Mia cara
						<choice>
							<abbr>Sig<am>:</am><hi rend="sup">ra</hi></abbr>
							<expan>Sig<ex>no</ex>ra</expan>
						</choice>
						<rs ref="TEI-ListPerson.xml#GherardiniViscontiDAragonaVittoria" type="person">
							<roleName type="nobility">Marchesa</roleName>
						</rs>
						<ptr target="#LL1.17_note1" />
					</s>
				</salute>
				<ab n="ab_02" rend="first_line_indented" type="parag">
					<s n="s_02" type="sentence">
						<lb facs="#LL1.17_line_1r_02" n="2" xml:id="LL1.17_lb_1r_02" />
						I rimproveri che mi <w>fa<del rend="erasure" resp="#LM">te</del></w> fare dal
						<rs type="person">
							<roleName type="nobility">Duca</roleName>
						</rs>
						<lb facs="#LL1.17_line_1r_03" n="3" xml:id="LL1.17_lb_1r_03" />
						mi giungono cari, sebbene non meritati. Per
						<lb facs="#LL1.17_line_1r_04" n="4" xml:id="LL1.17_lb_1r_04" />
						sistema mai scrivo più lettere ad una persona
						<lb facs="#LL1.17_line_1r_05" n="5" xml:id="LL1.17_lb_1r_05" />
						senza che abbia risposto alla prima; quindi
						<lb facs="#LL1.17_line_1r_06" n="6" xml:id="LL1.17_lb_1r_06" />
						ella mi dov<pc resp="#LM">.</pc>
						<ptr target="#LL1.17_note2" />
					</s>
				</ab>
			</div>
			<div type="paratext">
				<ab facs="#LL1.17_hotspot_1r_01" hand="#h1" subtype="addition" type="paratext" xml:id="LL1.17_hs_1r_01">
					<fw>
						<unclear>
							<lb />
							Vingt-deuxième
							<lb/>
							Cotefil
							<lb/>
							<gap extent="one-word" reason="illegible" />
						</unclear>
					</fw>
				</ab>

		<front />

		<body xml:lang="fr">
			<pb facs="#LL1.31.I_folio_1r" n="1" xml:id="LL1.31.I_fol_1r" />
			<!--fronte -->
			<div type="letter-body">
				<ab n="ab_02" rend="first_line_indented" type="parag">
					<s n="s_01" type="sentence">
						<ptr target="#LL1.31.I_note1" />
						<lb facs="#LL1.31.I_line_1r_01" n="1" xml:id="LL1.31.I_lb_1r_01" />
						Monsieur
						<persName ref="TEI-ListPerson.xml#BelliniVincenzoSalvatoreCarmeloFrancesco" role="composer">Bellini</persName>
						prie Monsieur
						<lb facs="#LL1.31.I_line_1r_02" n="2" xml:id="LL1.31.I_lb_1r_02" />
						<persName>Frederic</persName>
						de vouloir passer de chez lui,
						<lb xml:id="LL1.31.I_lb_1r_03" n="3" facs="#LL1.31.I_line_1r_03" />
						aux
						<orgName type="thermal_baths" ref="TEI-ListOrganization.xml#Bains_Chinois">Bains Chinois</orgName>
						pour
						<subst>
							<del rend="strikethrough underline">
								<unclear reason="deleted" quantity="1" unit="word" cert="medium" resp="#LM">affiner </unclear>
							</del>
							<add place="above">accorder</add>
						</subst>
						son
						<lb facs="#LL1.31.I_line_1r_04" n="4" xml:id="LL1.31.I_lb_1r_04" />
						piano, et dans le même temps
						<lb facs="#LL1.31.I_line_1r_05" n="5" xml:id="LL1.31.I_lb_1r_05" />
						lui apporter une
						<hi rend="underline">cléf d'accorder</hi> n'ayant
						<lb facs="#LL1.31.I_line_1r_06" n="6" xml:id="LL1.31.I_lb_1r_06" />
						recû la sienne, qui
						<subst>
							<del rend="strikethrough">
								erait
							</del>
							<add place="above">
								était
							</add>
						</subst>
						<gap agent="ink" reason="illegible" extent="one-word" />
					</s>
				</ab>
			</div>
			<div type="paratext">
				<ab facs="#LL1.31.I_hotspot_1r_02" hand="#h1" subtype="addition" type="paratext" xml:id="LL1.31.I_hs_1r_02">
					<fw>
						<unclear>
							<lb />
							Quatorzième
							<lb/>
							Cotefil
							<lb/>
							<gap extent="one-word" reason="illegible" />
						</unclear>
					</fw>
				</ab>
			</div>
			<pb facs="#LL1.31.I_folio_1v" n="2" xml:id="LL1.31.I_fol_1v" />
		</body>

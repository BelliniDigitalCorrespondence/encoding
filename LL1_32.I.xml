	<text n="LL1.32.I" subtype="manuscript" type="lettera" xml:id="LL1.32.I">
		<front />

		<body xml:lang="it">
			<pb facs="#LL1.32.I_folio_1r" n="1" xml:id="LL1.32.I_fol_1r" />
			<div type="letter-body">
				<salute n="ab_01">
					<s n="s_01" type="sentence" rend="first_line_indented">
						<ptr target="#LL1.32.I_note1" />
						<lb facs="#LL1.32.I_line_1r_01" n="1" xml:id="LL1.32.I_lb_1r_01" />
						<gap quantity="2" reason="lost" agent="hole" unit="char"/>
						Pregiatissima
						<persName ref="TEI-ListPerson.xml#StatellaEleonora" role="duchess">
							<choice>
								<abbr>Sig<am>:</am><hi rend="sup">ra</hi></abbr>
								<expan>Sig<ex>no</ex>ra</expan>
							</choice>
							Duchessa
						</persName>
					</s>
				</salute>
				<space quantity="1" unit="line" /> <!-- prossemica -->

				<!-- due parole cancellate illegibili -->

				<ab n="ab_02" type="paragraph">
					<s n="s_02" type="sentence">
						<lb facs="#LL1.32.I_line_1r_02" n="2" xml:id="LL1.32.I_lb_1r_02" />
						<del rend="erasure"><gap quantity="2" reason="deleted" unit="word" /></del>
					</s>
				</ab>
				
				<ab n="ab_03" type="paragraph">
					<s n="s_03" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.32.I_line_1r_03" n="3" xml:id="LL1.32.I_lb_1r_03" />
						Aspettava il momento che l'edizione
						<lb facs="#LL1.32.I_line_1r_04" n="4" xml:id="LL1.32.I_lb_1r_04" />
						della
						<rs ref="TEI-ListWork.xml#Beatrice_di_Tenda" type="work">Beatrice</rs>
						fosse terminata.
					</s>
					<s n="s_04" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.32.I_line_1r_05" n="5" xml:id="LL1.32.I_lb_1r_05" />
						Aspettai il momento che l'edizione
						<lb facs="#LL1.32.I_line_1r_06" n="6" xml:id="LL1.32.I_lb_1r_06" />
						della mia
						<rs ref="TEI-ListWork.xml#Beatrice_di_Tenda" type="work">Beatrice</rs>
						fosse completata
						<lb facs="#LL1.32.I_line_1r_07" n="7" xml:id="LL1.32.I_lb_1r_07" />
						per offrirle in uno all'esemplare
						<lb facs="#LL1.32.I_line_1r_08" n="8" xml:id="LL1.32.I_lb_1r_08" />
						della detta
						<term ref="TEI-ListTerm.xml#opera" subtype="music-term">opera,</term>
						i miei più distinti
						<lb facs="#LL1.32.I_line_1r_09" n="9" xml:id="LL1.32.I_lb_1r_09" />
						ringraziamenti per l'onore che con
						<lb facs="#LL1.32.I_line_1r_10" n="10" xml:id="LL1.32.I_lb_1r_10" />
						tanta
						<add place="supralinear">affettuosa</add>
						bontà ha voluto accordarmi
						<lb facs="#LL1.32.I_line_1r_11" n="11" xml:id="LL1.32.I_lb_1r_11" />
						nell'accettare la dedica
						<ptr target="#LL1.32.I_note2" />
					</s>
				</ab>
			</div>
			<div type="paratext">
				<ab facs="#LL1.32.I_hotspot_1r_01" hand="#h1" subtype="addition" type="paratext" xml:id="LL1.32.I_hs_1r_01">
					<fw>
						<lb />
						<gap extent="one-word" reason="illegible" />
						<lb/>
						<unclear>Cotefil</unclear>
						<lb/>
						<gap extent="one-word" reason="illegible" />
					</fw>
				</ab>
			</div>
			<pb facs="#LL1.32.I_folio_1v" n="2" xml:id="LL1.32.I_fol_1v" />
			<div type="paratext">
				<ab facs="#LL1.32.I_hotspot_1v_02" hand="#h2" subtype="addition" type="paratext" xml:id="LL1.32.I_hs_1v_02">

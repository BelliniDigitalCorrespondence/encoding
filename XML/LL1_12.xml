	<text n="LL1.12" subtype="manuscript" type="lettera" xml:id="LL1.12">
		<front />

		<body xml:lang="it">
			<pb facs="#LL1.12_folio_1r" n="1" xml:id="LL1.12_fol_1r" />
			<!--FRONTE RECTO-->
			<div n="t_01" type="letter-body">
				<ab n="ab_01" type="parag">
					<s n="s_01" type="sentence">
						<ptr target="#LL1.12_note1" />
						<lb facs="#LL1.12_line_1r_01" n="1" xml:id="LL1.12_lb_1r_01" />
						Mi
						<hi rend="underline">pare impossibile</hi>! Mi
						<hi rend="underline">spiego</hi>? Già farai
						<lb facs="#LL1.12_line_1r_02" n="2" xml:id="LL1.12_lb_1r_02" />
						pel raccomandato dei qui nostri amici, ciò che hai
						<lb facs="#LL1.12_line_1r_03" n="3" xml:id="LL1.12_lb_1r_03" />
						fatto
						<add place="supralinear">
							<rs ref="TEI-ListPerson.xml#PerucchiniGiovanniBattista" resp="#EC" type="person">mio caro Titta</rs> —
						</add> per gl'istessi
						<unclear reason="illegible"><gap extent="one-word" reason="illegible"/></unclear>: non è vero?
					</s>
				</ab>
			</div>
			<div n="c_01" type="closer">
				<ab n="ab_02">
					<s n="s_02" type="sentence">
						Addio
						<lb facs="#LL1.12_line_1r_04" n="4" xml:id="LL1.12_lb_1r_04" />
						<rs type="person">mio Zerbino</rs>
					</s>
				</ab>
				<salute n="ab_03">
					<s n="s_03" type="sentence">
						<lb facs="#LL1.12_line_1r_05" n="5" xml:id="LL1.12_lb_1r_05" />
						Il tuo<space />
					</s>
				</salute>
				<signed>
					<persName ref="TEI-ListPerson.xml#BelliniVincenzoSalvatoreCarmeloFrancesco" role="composer">Bellini</persName>
				</signed>
				<lb/>
			</div>

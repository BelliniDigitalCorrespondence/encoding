						<del rend="erasure">
							<gap extent="one-line" reason="deleted" />
						</del>
						<lb facs="#LL1.5_line_1v_06" n="6" xml:id="LL1.5_lb_1v_06" />
						guadagnare il doppio, di come l'avessi
						<lb facs="#LL1.5_line_1v_07" n="7" xml:id="LL1.5_lb_1v_07" />
						scritto per
						<persName ref="TEI-ListPerson.xml#CrivelliGiuseppe" role="impresario">Crivelli:</persName>
					</s>
					<s n="s_04" type="sentence">
						la fortuna pare che
						<lb facs="#LL1.5_line_1v_08" n="8" xml:id="LL1.5_lb_1v_08" />
						mi vuole ancora suo favorito:
					</s>
					<s n="s_05" type="sentence">
						io non
						<lb facs="#LL1.5_line_1v_09" n="9" xml:id="LL1.5_lb_1v_09" />

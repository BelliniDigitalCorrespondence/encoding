					<s n="s_03" type="sentence">
						<lb facs="#LL1.16_line_1r_04" n="4" xml:id="LL1.16_lb_1r_04" />
						Avendo steso l'intero
						<term ref="TEI-ListTerm.xml#duetto" subtype="music-term">duetto</term>
						<ptr target="#LL1.16_note2" />
						<lb facs="#LL1.16_line_1r_05" n="5" xml:id="LL1.16_lb_1r_05" />

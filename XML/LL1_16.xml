						<lb facs="#LL1.16_line_1r_08" n="8" xml:id="LL1.16_lb_1r_08" />
						<placeName ref="TEI-ListPlace.xml#Put">Puteau</placeName> per tutto fissare, e
						<lb facs="#LL1.16_line_1r_09" n="9" xml:id="LL1.16_lb_1r_09" />
						nell'istesso tempo darmi la
						<lb facs="#LL1.16_line_1r_10" n="10" xml:id="LL1.16_lb_1r_10" />
						<term ref="TEI-ListTerm.xml#sortita" subtype="music-term">sortita</term> di
						<persName ref="TEI-ListPerson.xml#RubiniGiovanniBattista" role="tenore">Rubini,</persName>

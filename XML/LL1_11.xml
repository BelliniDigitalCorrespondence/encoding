							<region>Sicile</region>
						</addrLine>
						<lb facs="#LL1.11_line_2v_02" n="2" xml:id="LL1.11_lb_2v_02" />
						<addrLine rend="align(right)">à Monsieur</addrLine>
						<lb facs="#LL1.11_line_2v_03" n="3" xml:id="LL1.11_lb_2v_03" />
						<addrLine>Monsieur
							<persName ref="TEI-ListPerson.xml#FerlitoVincenzo">Vincent Ferliti</persName>
						</addrLine>
						<lb facs="#LL1.11_line_2v_04" n="4" xml:id="LL1.11_lb_2v_04" />
						<addrLine rend="align(right)">à
							<placeName ref="TEI-ListPlace.xml#CT">Catane</placeName>
						</addrLine>
					</address>
				</ab>
			</div>

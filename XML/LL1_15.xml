	<!-- testo della lettera -->
	<text n="LL1.15" subtype="manuscript" type="minuta_di_lettera" xml:id="LL1.15">
		<front />

		<body xml:lang="it">
			<!-- fronte del folio -->
			<pb facs="#LL1.15_folio_1r" n="1" xml:id="LL1.15_fol_1r" />
			<!-- apertura, formula introduttiva -->
			<div n="o_01" type="opener">
				<dateline n="ab_01">
					<s n="s_01" type="sentence">
						<lb facs="#LL1.15_line_1r_01" n="1" xml:id="LL1.15_lb_1r_01" />
						<hi rend="align(right)">
							<placeName ref="TEI-ListPlace.xml#Paris">Parigi</placeName>
							<date when="04-30">30<am>:</am> Aprile</date></hi></s>
				</dateline>
			</div>
			<!-- inizio corpo del testo -->
			<div type="letter-body">
				<ab n="ab_02" rend="first_line_indented" type="paragraph">
					<s n="s_02" type="sentence">
						<lb facs="#LL1.15_line_1r_02" n="2" xml:id="LL1.15_lb_1r_02" />
						Ecco mia cara
						<rs ref="TEI-ListPerson.xml#JohnstonePlatamoneSophia" type="person">Duchessa</rs> che vi ho
						<lb facs="#LL1.15_line_1r_03" n="3" xml:id="LL1.15_lb_1r_03" />
						obbedito subito subito —
					</s>
					<s n="s_03" type="sentence">
						V'acchiudo l'<term ref="TEI-ListTerm.xml#arietta" subtype="music-term"><w lemma="arietta">ariet
								<lb break="no" facs="#LL1.15_line_1r_04" n="4" rend="double-stroke" xml:id="LL1.15_lb_1r_04" />
								ta</w></term> già
						<subst>
							<del rend="strikethrough">scritta </del>
							<add place="above">composta</add>
						</subst> sù la poesia che mi avete
						<lb facs="#LL1.15_line_1r_05" n="5" xml:id="LL1.15_lb_1r_05" />
						trascritto.
					</s>
					<s n="s_04" type="sentence">
						È di
						<choice>
							<abbr>vra<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>ra</expan>
						</choice> privativa da <w lemma="conservarsi">conservar
							<lb break="no" facs="#LL1.15_line_1r_06" n="6" rend="double-stroke" xml:id="LL1.15_lb_1r_06" />
							si</w> nel
						<choice>
							<abbr>vro<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>ro</expan>
						</choice> Album particolare.
						<ptr target="#LL1.15_note1" />
					</s>
				</ab>
				<ab n="ab_03" rend="first_line_indented" type="paragraph">
					<s n="s_04" type="sentence">
						<hi rend="align(right)">
							<lb facs="#LL1.15_line_1r_07" n="7" xml:id="LL1.15_lb_1r_07" />
							Vi son tenuto dall'interesse che sempre</hi>
							<lb facs="#LL1.15_line_1r_08" n="8" xml:id="LL1.15_lb_1r_08" />
						prendete per le mie figlie. —
					</s>
					<s n="s_05" type="sentence">
						Io ho <w lemma="incominciato">in
							<lb break="no" facs="#LL1.15_line_1r_09" n="9" rend="double-stroke" xml:id="LL1.15_lb_1r_09" />
							cominciato</w> a generarne una nuova e
						<lb facs="#LL1.15_line_1r_10" n="10" xml:id="LL1.15_lb_1r_10" />
						spero che non sarà indegna delle sue
						<lb facs="#LL1.15_line_1r_11" n="11" xml:id="LL1.15_lb_1r_11" />
						sorelle. —
					</s>
					<s n="s_06" type="sentence">
						Ho inteso che la nostra <w lemma="bravissima">bravis
							<lb break="no" facs="#LL1.15_line_1r_12" n="12" rend="double-stroke" xml:id="LL1.15_lb_1r_12" />
							sima</w>
						<persName ref="TEI-ListPerson.xml#NegriPastaGiuditta" role="soprano">Pasta</persName> ha trionfato dei suoi nemici
						<lb facs="#LL1.15_line_1r_13" n="13" xml:id="LL1.15_lb_1r_13" />
						di
						<placeName ref="TEI-ListPlace.xml#VE">Venezia</placeName> e non potea sortire diversamente.
					</s>
					<s n="s_07" type="sentence">
						<lb facs="#LL1.15_line_1r_14" n="14" xml:id="LL1.15_lb_1r_14" />
						Se la vedete ditele tante cose affettuose
						<lb facs="#LL1.15_line_1r_15" n="15" xml:id="LL1.15_lb_1r_15" />
						da mia parte. —
					</s>
					<s n="s_07" type="sentence">
						Voi venite o no a
						<lb facs="#LL1.15_line_1r_16" n="16" xml:id="LL1.15_lb_1r_16" />
						<placeName ref="TEI-ListPlace.xml#Paris">Parigi?</placeName>
					</s>
					<s n="s_08" type="sentence">
						<persName>
							<unclear reason="illegible">R
								<gap atLeast="4" atMost="5" reason="illegible" unit="char" />
							</unclear>
						</persName>
						<ptr target="#LL1.15_note2" /> mi dà sempre
						<choice>
							<abbr>vre<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>re</expan>
						</choice>
						<lb facs="#LL1.15_line_1r_17" n="17" xml:id="LL1.15_lb_1r_17" />
						nuove e mi parlò di una certa
						<persName xml:id="LL1.15_1r_17_MissWaite" next="#LL1.15_1r_18_MissWaite">Miss</persName>
							<lb facs="#LL1.15_line_1r_18" n="18" xml:id="LL1.15_lb_1r_18" />
							<persName xml:id="LL1.15_1r_18_MissWaite" prev="#LL1.15_1r_17_MissWaite"><hi rend="underline">Waite</hi>,
						</persName> che
						<choice resp="#DS #LM">
							<orig>ne</orig>
							<reg>né</reg>
						</choice> io
						<choice resp="#DS #LM">
							<orig>ne</orig>
							<reg>né</reg>
						</choice> lui abbiamo l'<w lemma="onore">ono
							<lb break="no" facs="#LL1.15_line_1r_19" n="19" rend="double-stroke" xml:id="LL1.15_lb_1r_19" />
							re</w> di conoscere. —
					</s>
					<s n="s_09" type="sentence">
						È passato da qua
						<lb facs="#LL1.15_line_1r_20" n="20" xml:id="LL1.15_lb_1r_20" />
						il
						<rs ref="TEI-ListPerson.xml#CavendishWilliam" type="person">duca di Devonshire,</rs> e sono stato <w lemma="spesso">spes
							<lb break="no" facs="#LL1.15_line_1r_21" n="21" rend="double-stroke" xml:id="LL1.15_lb_1r_21" />
							so</w> con lui che l'ho trovato <w lemma="incantato">incanta
							<lb break="no" facs="#LL1.15_line_1r_22" n="22" rend="double-stroke" xml:id="LL1.15_lb_1r_22" />
							to</w> della mia povera
						<rs ref="TEI-ListWork.xml#Beatrice_di_Tenda" resp="#EC" type="work">
							<hi rend="underline">Beatrice</hi>,
						</rs> che
						<lb facs="#LL1.15_line_1r_23" n="23" xml:id="LL1.15_lb_1r_23" />
						ha inteso a
						<placeName ref="TEI-ListPlace.xml#PA">Palermo,</placeName> ove facea gran
						<!-- secondo foglio -->
						<pb facs="#LL1.15_folio_1v" n="2" xml:id="LL1.15_fol_1v" />
						<lb facs="#LL1.15_line_1v_01" n="1" xml:id="LL1.15_lb_1v_01" />
						piacere; ed ogni sera il <term ref="TEI-ListTerm.xml#quintetto" subtype="music-term">quintetto</term>
						<ptr target="#LL1.15_note3" /> del
						<lb facs="#LL1.15_line_1v_02" n="2" xml:id="LL1.15_lb_1v_02" />
						<choice>
							<abbr>2<am>:</am><hi rend="sup">do</hi></abbr>
							<expan>secondo</expan>
						</choice>
						<term ref="TEI-ListTerm.xml#atto" subtype="music-term">atto</term> doveano cantarlo tre volte. —
					</s>
				</ab>
				<ab n="ab_04" type="paragraph">
					<s n="s_10" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.15_line_1v_03" n="3" xml:id="LL1.15_lb_1v_03" />
						Vi prego
						<choice>
							<abbr>Sig<am>:</am><hi rend="sup">ra</hi></abbr>
							<expan>Sig<ex>no</ex>ra</expan>
						</choice>
						<rs ref="TEI-ListPerson.xml#JohnstonePlatamoneSophia" type="person">Duchessa</rs> di scrivere
						<lb facs="#LL1.15_line_1v_04" n="4" xml:id="LL1.15_lb_1v_04" />
						al
						<choice>
							<abbr>vro<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>ro</expan>
						</choice> avvocato a
						<placeName ref="TEI-ListPlace.xml#London">Londra</placeName> riguardo
						<lb facs="#LL1.15_line_1v_05" n="5" xml:id="LL1.15_lb_1v_05" />
						alla lettera di cambio che ho sopra
						<lb facs="#LL1.15_line_1v_06" n="6" xml:id="LL1.15_lb_1v_06" />
						<choice>
							<abbr>M<am>:</am><hi rend="sup">r</hi></abbr>
							<expan>M<ex>onsieu</ex>r</expan>
						</choice>
						<persName ref="TEI-ListPerson.xml#LaportePierreFrancois" role="impresario">Laporte,</persName> perchè la presenti
						<lb facs="#LL1.15_line_1v_07" n="7" xml:id="LL1.15_lb_1v_07" />
						a questi nel giorno di sua scadenza.
					</s>
					<s n="s_11" type="sentence">
						<lb facs="#LL1.15_line_1v_08" n="8" xml:id="LL1.15_lb_1v_08" />
						Non <del rend="erasure">vi</del> dimenticate di farmi questo <w>fa
						<lb break="no" facs="#LL1.15_line_1v_09" n="9" rend="double-stroke" xml:id="LL1.15_lb_1v_09" />vore,</w> perchè non abbia <persName ref="TEI-ListPerson.xml#LaportePierreFrancois" role="impresario">Laporte</persName> <w>alcu
						<lb break="no" facs="#LL1.15_line_1v_10" n="10" rend="double-stroke" xml:id="LL1.15_lb_1v_10" />na</w> scusa per non pagare. —
					</s>
				</ab>
				<ab n="ab_05" type="paragraph">
					<s n="s_12" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.15_line_1v_11" n="11" xml:id="LL1.15_lb_1v_11" />
						Ho scritto alla
						<choice>
							<abbr>Sig<am>:</am><hi rend="sup">ra</hi></abbr>
							<expan>Sig<ex>no</ex>ra</expan>
						</choice>
						<persName ref="TEI-ListPerson.xml#CantuTurinaGiuditta">Giuditta Turina,</persName>
						<lb facs="#LL1.15_line_1v_12" n="12" xml:id="LL1.15_lb_1v_12" />
						perciò non vi prego di miei saluti per essa.
					</s>
				</ab>
			</div>
			<!-- formula di chiusura-->
			<div n="c_01" type="closer">
				<ab n="ab_06" type="paragraph">
					<s n="s_13" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.15_line_1v_13" n="13" xml:id="LL1.15_lb_1v_13" />
						Aggradite le assicurazioni della
						<lb facs="#LL1.15_line_1v_14" n="14" xml:id="LL1.15_lb_1v_14" />
						mia stima e considerazione e
						<choice>
							<abbr>cred<am>:</am><hi rend="sup">mi</hi></abbr>
							<expan>cred<ex>ete</ex>mi</expan>
						</choice>
						<lb facs="#LL1.15_line_1v_15" n="15" xml:id="LL1.15_lb_1v_15" />
						sempre
					</s>
				</ab>

				<salute n="ab_06">
					<s n="s_14" type="sentence">
						<lb facs="#LL1.15_line_1v_16" n="16" xml:id="LL1.15_lb_1v_16" />
						<hi rend="align(right)">
							<choice>
								<abbr>Vro<g ref="g01" rend="sup" /></abbr>
								<expan>V<ex>ost</ex>ro</expan>
							</choice>
							<choice>
								<abbr> affssmo</abbr>
								<expan>aff<ex>ezionati</ex>ss<ex>i</ex>mo</expan>
							</choice>
						</hi>
						<lb facs="#LL1.15_line_1v_17" n="17" xml:id="LL1.15_lb_1v_17" />
					</s>
				</salute>

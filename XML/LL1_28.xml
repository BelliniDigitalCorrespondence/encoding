		<body xml:lang="it">
			<pb facs="#LL1.28_folio_1r" n="1" xml:id="LL1.28_fol_1r" />
			<!-- FRONTE -->
			<div n="o_01" type="opener">
				<!-- apertura -->
				<dateline n="ab_01">
					<s n="s_01" type="sentence">
						<lb facs="#LL1.28_line_1r_01" n="1" xml:id="LL1.28_lb_1r_01" />
						<date when="--05-30" rend="align(right)">30<am>:</am><space/>Maggio</date> –
						(<address xml:lang="fr">
							<street>rampe de pont</street>
							<lb facs="#LL1.28_line_1r_02" n="2" xml:id="LL1.28_lb_1r_02" />
							<street rend="align(right)">de <placeName ref="TEI-ListPlace.xml#NSS">Neuilly</placeName><space /><hi rend="underline"><num type="cardinal" value="19">19</num><space />bis</hi></street>
							<lb facs="#LL1.28_line_1r_03" n="3" xml:id="LL1.28_lb_1r_03" />
							<region rend="underline align(right)">pres de <placeName ref="TEI-ListPlace.xml#Paris">Paris</placeName> à <placeName ref="TEI-ListPlace.xml#Put">Puteaux</placeName></region>
						</address>
					</s>
				</dateline>
			</div>
			<div n="t_01" type="letter-body">
				<salute n="ab_02">
					<s n="s_02" type="sentence">
						<lb facs="#LL1.28_line_1r_04" n="4" xml:id="LL1.28_lb_1r_04" />
							Mio caro
							<persName ref="TEI-ListPerson.xml#PonzaniPietro" role="lawyer">Ponzani</persName></s>
				</salute>
				<space quantity="1" unit="line" /> <!-- prossemica -->
				<ab n="ab_03" type="parag">
					<s n="s_03" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.28_line_1r_05" n="5" xml:id="LL1.28_lb_1r_05" />
						<persName ref="TEI-ListPerson.xml#BarboGiacomo">Barbò</persName>
						ha dovuto scriverti
						<lb facs="#LL1.28_line_1r_06" n="6" xml:id="LL1.28_lb_1r_06" />
						che io avea ricevuto la tua lettera, e che
						<lb facs="#LL1.28_line_1r_07" n="7" xml:id="LL1.28_lb_1r_07" />
						avea spedito a
						<placeName ref="TEI-ListPlace.xml#London">Londra</placeName>
						quella di
						<persName ref="TEI-ListPerson.xml#LevySolomon">Levy,</persName>
						ove
						<lb facs="#LL1.28_line_1r_08" n="8" xml:id="LL1.28_lb_1r_08" />
						questi si trovava.
					</s>
					<s n="s_04" type="sentence">
						Ora è qui, e mi dà
						<lb facs="#LL1.28_line_1r_09" n="9" xml:id="LL1.28_lb_1r_09" />
						la commissione di farti pagare il suo
						<lb facs="#LL1.28_line_1r_10" n="10" xml:id="LL1.28_lb_1r_10" />
						debito;
					</s>
					<s n="s_05" type="sentence">
						ma come non se ne capisce <w>pre
							<lb break="no" facs="#LL1.28_line_1r_11" n="11" rend="double-stroke" xml:id="LL1.28_lb_1r_11" />
							cisamente</w> la cifra non posso dare
						<lb facs="#LL1.28_line_1r_12" n="12" xml:id="LL1.28_lb_1r_12" />
						alcun'ordine perché ti sii sborsato;
					</s>
					<s n="s_06" type="sentence">
						ora,
						<lb facs="#LL1.28_line_1r_13" n="13" xml:id="LL1.28_lb_1r_13" />
						se tu vedi la
						<choice>
							<abbr>Sig<am>:</am><hi rend="sup">ra</hi></abbr>
							<expan>Sig<ex>no</ex>ra</expan>
						</choice>
						<persName ref="TEI-ListPerson.xml#CantuTurinaGiuditta">
							G. Turina
						</persName>
						puoi
						<del rend="erasure">da</del>
						a
						<lb facs="#LL1.28_line_1r_14" n="14" xml:id="LL1.28_lb_1r_14" />
						lei dire se sono<space />
						<num type="cardinal" value="160">160<am>:</am></num><space />o<space />
						<num type="cardinal" value="60">60<am>:</am></num><space />
						<choice>
							<abbr>f<am>:</am><hi rend="sup">i</hi></abbr>
							<expan>f<ex>ranch</ex>i</expan>
						</choice>
						che ti
						<lb facs="#LL1.28_line_1r_15" n="15" xml:id="LL1.28_lb_1r_15" />
						si deve, e pregar lei che te li paghi
						<lb facs="#LL1.28_line_1r_16" n="16" xml:id="LL1.28_lb_1r_16" />
						e me ne carichi a me il debito: hai
						<lb facs="#LL1.28_line_1r_17" n="17" xml:id="LL1.28_lb_1r_17" />
						capito?
					</s>
					<s n="s_07" type="sentence">
						Nel caso poi che tu non vedi
						<lb facs="#LL1.28_line_1r_18" n="18" xml:id="LL1.28_lb_1r_18" />
						più la
						<choice>
							<abbr resp="#LM">sud<am>:</am><hi rend="sup">tta</hi></abbr>
							<expan>sud<ex>de</ex>tta</expan>
						</choice>
						scrivimi precisamente
						<lb facs="#LL1.28_line_1r_19" n="19" xml:id="LL1.28_lb_1r_19" />
						la cifra che io darò commissione ad
						<lb facs="#LL1.28_line_1r_20" n="20" xml:id="LL1.28_lb_1r_20" />
						altro perché ti sia pagata —
					</s>
					<s n="s_08" type="sentence">
						Questa
						<lb facs="#LL1.28_line_1r_21" n="21" xml:id="LL1.28_lb_1r_21" />
						mia la riceverai da
						<choice>
							<abbr>M<am>:</am><hi rend="sup">e</hi></abbr>
							<expan>M<ex>adame</ex></expan>
						</choice>
						<persName ref="TEI-ListPerson.xml#GaspariniPolliniMarianna">Pollini</persName>
						<ptr target="#LL1.28_note1" />
					</s>
				</ab>
			</div>

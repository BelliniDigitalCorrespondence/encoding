		<body xml:lang="it">
			<pb facs="#LL1.23.II_folio_1r" n="1" xml:id="LL1.23.II_fol_1r" />
			<!--<div type="opener" n="o_01">
				<gap reason="missing" extent="unknown"/>
			</div>-->
			<div type="letter-body">
				<salute n="ab_01">
					<s n="s_01" type="sentence">
						<ptr target="#LL1.23.II_note1" />
						<lb facs="#LL1.23.II_line_1r_01" n="1" xml:id="LL1.23.II_lb_1r_01" />
						<hi rend="first_line_indented">
							<rs type="person">Signore</rs></hi></s>
				</salute>
				<ab n="ab_02" type="parag">
					<s n="s_02" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.23.II_line_1r_02" n="2" xml:id="LL1.23.II_lb_1r_02" />
						Vengo di ricevere la
						<choice>
							<abbr>vra<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>ra</expan>
						</choice>
						commedia
						<lb facs="#LL1.23.II_line_1r_03" n="3" xml:id="LL1.23.II_lb_1r_03" />
						<del rend="erasure">che
							<gap quantity="3" reason="deleted" unit="char" />più lieta</del>, che trovo graziosissima,
						<lb facs="#LL1.23.II_line_1r_04" n="4" xml:id="LL1.23.II_lb_1r_04" />
						e molto mi ha divertito. —
					</s>
					<s n="s_03" type="sentence">
						<del instant="true" rend="erasure">N</del>
						Non sò
						<lb facs="#LL1.23.II_line_1r_05" n="5" xml:id="LL1.23.II_lb_1r_05" />
						con che termini ringraziar<subst>
							<del rend="overwritten">t</del>
							<add place="superimposed">v</add>
						</subst>i di tanto
						<lb facs="#LL1.23.II_line_1r_06" n="6" xml:id="LL1.23.II_lb_1r_06" />
						<choice>
							<abbr>vro<g ref="g01" rend="sup" /></abbr>
							<expan>v<ex>ost</ex>ro</expan>
						</choice>
						incommodo e bontà nell'aver
						<lb facs="#LL1.23.II_line_1r_07" n="7" xml:id="LL1.23.II_lb_1r_07" />
						pensato d'inviarmela e
						<subst>
							<del rend="strikethrough" xml:id="apice">con tanta eleganza </del>
							<add place="below"> <choice><orig resp="#DS #LM">si</orig><reg>sì</reg></choice> elegantemente</add>
						</subst>
						<lb facs="#LL1.23.II_line_1r_08" n="8" xml:id="LL1.23.II_lb_1r_08" />
						<del rend="strikethrough">legata</del>
					</s>
					<s n="s_04" type="sentence">
						<lb facs="#LL1.23.II_line_1r_09" n="9" xml:id="LL1.23.II_lb_1r_09" />
						Io non posso per ora che esprimer<subst>
							<del rend="overwritten">t</del>
							<add>v</add></subst>i la
						<lb facs="#LL1.23.II_line_1r_10" n="10" xml:id="LL1.23.II_lb_1r_10" />
						mia gratitudine, aspettando qualche suo
						<lb facs="#LL1.23.II_line_1r_11" n="11" xml:id="LL1.23.II_lb_1r_11" />
						comando
						<ptr target="#LL1.23.II_note2" />
					</s>
				</ab>
			</div>

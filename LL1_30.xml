						<address xml:lang="fr">
							<street>N<am>.</am><space/><num type="cardinal" value="19">19</num><am>:</am><space/>bis rampe</street>
							<lb facs="#LL1.30_line_1r_02" n="2" xml:id="LL1.30_lb_1r_02" />
							<street rend="align(right)">de <placeName ref="TEI-ListPlace.xml#NSS">Neuilly</placeName> à</street>
							<region rend="underline"><placeName ref="TEI-ListPlace.xml#Put">Puteaux</placeName></region>
							<lb facs="#LL1.30_line_1r_03" n="3" xml:id="LL1.30_lb_1r_03" />
							<region rend="underline align(right)">près <choice resp="#DS"><orig>dé</orig><reg>de</reg></choice> <placeName ref="TEI-ListPlace.xml#Paris">Paris.</placeName></region>
						</address>
					</s>
				</dateline>
			</div>
			<div type="letter-body">
				<salute n="ab_02">
					<s n="s_02" type="sentence" rend="first_line_indented">
						<lb facs="#LL1.30_line_1r_04" n="4" xml:id="LL1.30_lb_1r_04" />
							Mio caro
							<persName ref="TEI-ListPerson.xml#FlorimoFrancesco" role="composer">Florimo</persName></s>
				</salute>
				<ab n="ab_03" rend="first_line_indented" type="parag">
					<s n="s_03" type="sentence">
						<lb facs="#LL1.30_line_1r_05" n="5" xml:id="LL1.30_lb_1r_05" />
						Una vera invenzione ti ha cagionato
						<lb facs="#LL1.30_line_1r_06" n="6" xml:id="LL1.30_lb_1r_06" />
						tanto dolore per lo supposto duello, e mia
						<lb facs="#LL1.30_line_1r_07" n="7" xml:id="LL1.30_lb_1r_07" />
						morte.
					</s>
					<s n="s_04" type="sentence">
						Tu mi conosci bene, e sai che un
						<lb facs="#LL1.30_line_1r_08" n="8" xml:id="LL1.30_lb_1r_08" />
						solo punto d'onore mi farebbe andare sul
						<lb facs="#LL1.30_line_1r_09" n="9" xml:id="LL1.30_lb_1r_09" />
						terreno, o una disgrazia fatale
						<ptr target="#LL1.30_note1" />
					</s>
				</ab>
			</div>
			<div type="paratext">
				<ab facs="#LL1.30_hotspot_1r_01" hand="#h1" subtype="addition" type="paratext" xml:id="LL1.30_hs_1r_01">
